class Solution {
public:
    void sortColors(vector<int>& nums) {
        // sort colors
        // creating an array to put the rearranged numbers
        vector<int> answer;
        // finding the number in nums
        for(int x: nums){
            if (x == 0){
                // putting the number in answer
                answer.push_back(x);
            }
        }
        for(int x: nums){
            if (x == 1){ 
                answer.push_back(x);
            }
        }
        for(int x: nums){
            if (x == 2){
                answer.push_back(x);
            }
        }
        nums = answer;
    }
};
